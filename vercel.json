{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ],
    "env": {
        "PORT": "3000",
        "MONGODB_URI": "@mongodb_connection_string",
        "JWT_SECRET": "@jwt_secret"
    }
}